<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World! This is a LinearLayout." />

    <Button
        android:id="@+id/bt_start_ll_hor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "Horizontal LinearLayout"/>

    <Button
        android:id="@+id/bt_start_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Relative Layout"
        android:textColor="#F40002"/>

    <Button
        android:id="@+id/bt_start_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Frame Layout"
        android:textColor="#FFFF99"/>

    <Button
        android:id="@+id/bt_start_pfl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Percent FrameLayout"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/bt_start_prl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Percent RelativeLayout"
        android:textColor="@color/colorPrimaryDark"/>
</LinearLayout>